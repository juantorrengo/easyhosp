<div class="table-responsive col-lg-12">
    <table class="table table-striped table-hover">

        <thead>
        <tr class="beGrey">
            <th></th>
            <th>Título</th>
            <th>Fecha Inicio</th>
            <th>fecha Fin</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for r in reservas %}
            <tr>
                <td></td>
                <td>{{ r.titulo }}</td>
                <td>{{ r.fechaInicio|date("d/m/Y") }}</td>
                <td>{{ r.fechaFin|date("d/m/Y") }}</td>
                {%  if r.estado == 0 %}
                    {% if date() > date(r.fechaInicio) %}
                    <td>
                        Tiempo de respuesta caducado
                    </td>
                    {% else %}
                    <td>
                        Esperando Confirmación
                    </td>
                    {% endif %}
                    <td></td>
                {%elseif r.estado == 1 %}
                    <td>
                        Confirmada
                    </td>
                    <td>
                        <a class="btn btn-primary verDetalles" data-path="{{ r.id }}" >Ver Datos</a>
                    </td>
                {% elseif r.estado == 2 %}
                    <td>
                        Rechazada
                    </td>
                    <td>
                        <a class="btn btn-success calificar" data-path="{{ r.id }}" >Calificar</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>