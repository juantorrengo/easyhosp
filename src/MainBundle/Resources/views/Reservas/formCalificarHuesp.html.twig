<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="blue bigger">Calificar Huesped</h4>
</div>
<div class="modal-body">
    <div class="row">
        <form class="form-horizontal" id="formCalificarHuesped" action="{{ path('calificarHuesped') }}" method="POST">
            <input type="hidden" name="resId" value="{{ r.id }}">
            <input type="hidden" name="userId" value="{{ app.session.get('id') }}">
            <input type="hidden" name="hospId" value="{{ r.hospId }}">
            <input type="hidden" name="huespId" value="{{ r.userId }}">
            <div class="form group col-lg-9" style="margin-bottom: 20px;">
                <h5>Huesped: {{ r.apellido }}, {{ r.nombre }}. Hospedaje: {{ r.titulo }}</h5>
                <br>
                <label class="col-sm-6 form-control-label">Calificar Huesped</label>
                <select style="margin-left: 14px; width: 90%;" class="form-control" name="puntaje">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <label class="col-sm-6 form-control-label">Comentario (opcional)</label>
                <textarea name="comentario" class="form-control col-sm-6" style="margin-left: 14px; width: 90%;"  cols="30" rows="5"></textarea>
            </div>
        </form>
    </div>
</div>
<div class="modal-footer">
    <button id="calificarHuesped" class="btn btn-small btn-success">
        <i class="icon-ok"></i>
        Aceptar
    </button>
    <button class="btn btn-small" data-dismiss="modal">
        <i class="icon-remove"></i>
        Cancelar
    </button>
</div>
<script type="text/javascript">
        $('#calificarHuesped').on('click', function (event) {
            event.preventDefault();
            $('#formCalificarHuesped').submit();
        });
</script>