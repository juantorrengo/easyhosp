<div class="table-responsive col-lg-12">
    <table class="table table-striped table-hover">

        <thead>
        <tr class="beGrey">
            <th></th>
            <th>Título</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for r in reservas %}
            <tr>
                <td></td>
                <td>{{ r.titulo }}</td>
                <td>{{ r.fechaInicio|date("d/m/Y") }}</td>
                <td>{{ r.fechaFin|date("d/m/Y") }}</td>
                {% if r.estado == 0 %}
                    <td>
                        Esperando Confirmación
                    </td>
                    <td>
                        <a class="btn btn-primary confirmar" data-path="{{ r.id }}" >Confirmar</a>
                        <a class="btn btn-danger rechazar" data-path="{{ r.id }}" >Rechazar</a>
                    </td>
                {% elseif r.estado == 1 %}
                    <td>
                        Confirmada
                    </td>
                    {% if date() > date(r.fechaFin) %}
                        <td>
                            <a class="btn btn-success calificarHuesp" data-path="{{ r.id }}" >Calificar Huesped</a>
                        </td>
                    {% endif %}
                {% elseif r.estado == 2 %}
                    <td>
                        Rechazada
                    </td>
                    <td><td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>