<div class="table-responsive col-lg-12">
    <table class="table table-striped table-hover">

        <thead>
        <tr class="beGrey">
            <th></th>
            <th>TÃ­tulo</th>
            <th>Fecha Inicio</th>
            <th>fecha Fin</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for r in reservas %}
            <tr>
                <td></td>
                <td>{{ r.titulo }}</td>
                <td>{{ r.fechaInicio|date("d/m/Y") }}</td>
                <td>{{ r.fechaFin|date("d/m/Y") }}</td>
                {%if r.estado == 1 %}
                    <td>
                        Confirmada
                    </td>
                    <td>
                        <a class="btn btn-success calificar" data-path="{{ r.id }}" >Calificar</a>
                    </td>
                {% elseif r.estado == 0 %}
                    <td>
                        Finalizada, sin respuesta.
                    </td>
                    <td></td>
                {% elseif r.estado == 2%}
                    <td>
                        Rechazada
                    </td>
                    <td></td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>