<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="blue bigger">Nuevo Tipo Hospedaje</h4>
</div>
<div class="modal-body">
    <form class="form-horizontal" name="formTipoHosp" id="formNewTipo" action="{{ path('tipoHospSave') }}" method="POST">
        <div class="form-group row">
            <label for="inputNombre" class="col-sm-2 form-control-label">Nombre</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" name="nombre" id="nombreTipo" placeholder="Nombre" />
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button id="aceptarNewTipo" class="btn btn-small btn-primary">
        <i class="icon-ok"></i>
        Aceptar
    </button>
    <button class="btn btn-small" data-dismiss="modal">
        <i class="icon-remove"></i>
        Cancelar
    </button>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#formNewTipo').validate({
            rules: {
                nombre: {
                    required: true,
                    minlength: 4
                }
            },
            messages: {
                nombre: {
                    required: "El nombre es requerido",
                    minlength: "Debe tener un m√≠nimo de 4 caracateres"
                }
            }
        });
        $('#aceptarNewTipo').on('click', function (event) {
            event.preventDefault();
            if($('#formNewTipo').valid()){
                $('#formNewTipo').submit();
            }
        });
    });
</script>

