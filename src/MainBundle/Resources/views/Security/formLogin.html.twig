
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="account-wall">
            <h1 class="text-center login-title">Ingresar a EasyHosp</h1>
            <form id="form-signin" action="{{ path('checkLogin') }}" method="POST" class="form-signin">
                <input type="email" name="username" id="email" class="form-control" placeholder="Email" required autofocus>
                <input type="password" name="password" class="form-control" placeholder="contraseña" required>
                <button id="aceptarLogin" class="btn btn-lg btn-primary btn-block" type="submit">
                    Ingresar</button>
            </form>
        </div>
        <a href="{{ path('registrarse') }}" class="text-center new-account">Crear una Cuenta </a>
        <a class="text-center new-account" id="recuperarClave" data-path="{{ path('recuperarClave') }}" href="#">Olavide mi contraseña</a>

        <div class="container">
            <a href="#" data-target="#pwdModal" data-toggle="modal">Forgot my password</a>
        </div>

    </div>
</div>

