<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4" id="loginCard">
        <div class="account-wall">
            <h1 class="text-center login-title">Ingresar a EasyHosp</h1>
            <form id="form-signin" action="{{ path('checkLogin') }}" method="POST" class="form-signin">
                <input type="email" name="username" id="email" class="form-control" placeholder="Email" required autofocus>
                <input type="password" name="password" class="form-control" placeholder="contraseña" required>
                <button id="aceptarLogin" class="btn btn-lg btn-primary btn-block" type="submit">
                    Ingresar</button>
            </form>
        </div>
        <a href="{{ path('registrarse') }}" class="text-center new-account">Crear una Cuenta </a>
        <a class="text-center new-account" id="recuperarPass" href="#">Olvidé mi contraseña</a>
    </div>
    <div class="col-sm-6 col-md-4 col-md-offset-4" id="forgetPassCard">
        <div class="account-wall">
            <h1 class="text-center login-title">Recuperar Clave</h1>
            <form id="form-recuPass" class="form-signin">
                <input type="email" name="email" id="emailRecu" class="form-control" placeholder="Email" required style="margin-bottom: 5%;">
                <button id="aceptarRecuPass" data-path="{{ path('recuperarPass', { 'email': 'x'}) }}" class="btn btn-lg btn-primary">
                    Recuperar</button>
                <button id="cancelarRecuPass" class="btn btn-lg btn-danger">
                    Volver</button>
            </form>
        </div>
    </div>
</div>
{% include 'MainBundle:Utils:modal.html.twig' %}

