<table class="table table-hover table-bordered">
    <thead>
    <tr class="beGrey">
        <th></th>
        <th>Título</th>
        <th>Fecha publicación</th>
        <th>Dirección</th>
        <th>Precio</th>
        <th>Capacidad</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for hospedaje in hospedajes%}
        <tr>
            <td></td>
            <td>{{ hospedaje.titulo }}</td>
            <td>{{ hospedaje.fechaPublicacion|date('d-m-Y') }}</td>
            <td>{{ hospedaje.direccion }}</td>
            <td>${{ hospedaje.precio }}</td>
            <td>{{ hospedaje.capacidad }}</td>
            <td><a class="btn btn-primary" href="#">Ver</a>
                <a class="btn btn-warning" href="#">Editar</a>
                <a class="btn btn-danger" href="#">Eliminar</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>