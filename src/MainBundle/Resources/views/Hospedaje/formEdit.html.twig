<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="blue bigger">Editar Hospedaje</h4>
</div>
<div class="modal-body">
    <form class="form-horizontal" id="formEditHosp" action="{{ path('hospEditSave') }}" method="POST">
        <input type="hidden" name="idHospedaje" value="{{ hospedaje.id }}">

        <div class="form-group row">
            <label for="inputTitulo" class="col-sm-3 form-control-label">Título*</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" name="titulo" id="titulo" value="{{ hospedaje.titulo }}" />
            </div>
        </div>

        <div class="form-group row">
            <label for="inputDescripcion" class="col-sm-3 form-control-label">Descripción*</label>
            <div class="col-sm-7">
                <textarea name="descripcion" class="form-control" id="descripcion" rows="3">{{ hospedaje.descripcion }}</textarea>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputTipohospedaje" class="col-sm-3 form-control-label">Tipo hospedaje*</label>
            <div class="col-sm-7">
                <select class="form-control" name="tipohospedaje">
                    {% for tipo in tipos %}
                        <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputLocalidad" class="col-sm-3 form-control-label">Localidad*</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" name="localidad" id="localidad"  value="{{ hospedaje.localidad }}"/>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputDireccion" class="col-sm-3 form-control-label">Dirección*</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" name="direccion" id="direccion"  value="{{ hospedaje.direccion }}" />
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPrecio" class="col-sm-3 form-control-label">Precio*</label>
            <div class="col-sm-7">
                <input type="number" class="form-control" name="precio" id="precio"  value="{{ hospedaje.precio }}" />
            </div>
        </div>

        <div class="form-group row">
            <label for="inputCapacidad" class="col-sm-3 form-control-label">Capacidad*</label>
            <div class="col-sm-7">
                <input type="number" class="form-control" name="capacidad" id="capacidad"  value="{{ hospedaje.capacidad }}" />
            </div>
        </div>

        <div class="form-group row">
            <label for="inputImagenes" class="col-sm-3 form-control-label">Imágenes*</label>
            <div class="col-sm-7">
                <input type="file" id="file1" class="form-control" name="file1" />
                <input type="file" class="form-control" name="file2"/>
                <input type="file" class="form-control" name="file3" />
                <input type="file" class="form-control" name="file4" />
                <input type="file" class="form-control" name="file5" />
            </div>
        </div>

        <div class="modal-footer">
            <button id="aceptarEditHosp" class="btn btn-small btn-primary">
                <i class="icon-ok"></i>
                Aceptar
            </button>
            <button class="btn btn-small" data-dismiss="modal">
                <i class="icon-remove"></i>
                Cancelar
            </button>
        </div>

    </form>
</div>



