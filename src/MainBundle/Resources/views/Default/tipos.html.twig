{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-success" role="alert">
            <div class="container"> {{ flashMessage }}</div>
        </div>
    {% endfor  %}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h2 class="padding-none">Tipos</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>Nombre</th>
                        <th>Borrado</th>
                        <th>Actions</th>
                    </tr>

                    {% for tipo in tipos %}
                        <tr>
                            <td>{{ tipo.nombre }}</td>
                            <td>
                                {% if tipo.borrado == 0 %}
                                    No
                                {% else %}
                                    Si
                                {% endif %}
                            </td>
                            <td>
                                <a href="tipos/view/{{ tipo.id }}" class="btn btn-sm btn-info">View</a>
                                <a href="tipos/edit/{{ tipo.id }}" class="btn btn-sm btn-primary">Edit</a>
                                <a href="#" class="btn btn-sm btn-danger btn-delete">Delete</a>
                            </td>
                        </tr>

                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}