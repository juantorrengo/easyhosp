{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Hospedajes
            </h1>
        </div>
    </div>
    <div id="barraBusqueda">
        <nav class="navbar">
            <form class="navbar-form navbar-left" id="searchForm" role="search" style="margin-left: -16px">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Título" disabled>
                    <input type="text" class="form-control" name="localida" id="localidad" placeholder="Localidad" disabled>
                    <input type="number" class="form-control" name="capacidad" id="capacidad" placeholder="Capacidad" disabled>
                    <select class="form-control" name="tipohospedaje" id="tipohospedaje" disabled>
                        <option value="">Todos</option>
                        {% for tipo in tipos %}
                            <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                        {% endfor %}
                    </select>
                    <input type="text" class="form-control" name="datefilter" id="fechas" value="" placeholder="Fecha" />
                    <input type="hidden" name="desde" id="desde" value="">
                    <input type="hidden" name="hasta" id="hasta" value="">
                </div>
                <button id="btnSearchHosp" class="btn btn-info searchOrder">Buscar</button>
                <button id="btnCleanSearch" type="reset" disabled class="btn btn-warning searchOrder" data-path="{{ path('hospPaginated') }}">Limpiar</button>
                <legend class="oblique searchHosp" >La búsqueda puede ser por título, tipo, localidad y capacidad.</legend>
            </form>
        </nav>
    </div>
    <div id="tablaHospedajes">
        {% include 'MainBundle:Default:tablaHospedajes.html.twig' %}
    </div>
    {% include 'MainBundle:Utils:modal.html.twig' %}
{% endblock %}

